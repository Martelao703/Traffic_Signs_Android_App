<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="45dp"
        android:layout_height="42dp"
        android:layout_marginStart="73dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="673dp"
        android:background="?android:attr/selectableItemBackground"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cross_icon" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="143dp"
        android:layout_height="46dp"
        android:layout_marginStart="134dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="73dp"
        android:gravity="center"
        android:text="Sobre o trabalho"
        app:layout_constraintEnd_toStartOf="@+id/backBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="276dp"
        android:layout_height="197dp"
        android:layout_marginStart="67dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="109dp"
        android:gravity="center"
        android:text="Este trabalho, utilizando o conceito Sistemas de Transporte Inteligente (ITS), tem por objetivo simplificar a perceção e visualização dos sinais para um utilizador, ou transmitir os sinais de trânsito para um veículo inteligente, através de uma aplicação Android que utiliza as coordenadas geográficas para comunicar com uma base de dados e receber vários dados que vão ser transformados. "
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="274dp"
        android:layout_height="196dp"
        android:layout_marginStart="69dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="101dp"
        android:gravity="center"
        android:text="Este trabalho foi desenvolvido no âmbito da unidade Curricular de Projeto Informático, durante o ultimo semester da licenciatura de Engenharia Informática. O projeto foi desenvolvido por Gonçalo Correia e David Alves sob o apoio e orientação do Professor Sílvio Priem Mendes, do Professor Paulo Jorge Gonçalves Loureiro e da Professora Anabela Moreira Bernardino."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="108dp"
        android:layout_height="32dp"
        android:layout_marginStart="151dp"
        android:layout_marginTop="109dp"
        android:layout_marginEnd="152dp"
        android:gravity="center"
        android:text="Sobre nós"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

</androidx.constraintlayout.widget.ConstraintLayout>